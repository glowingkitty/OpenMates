<mjml>
  <mj-head>
    <mj-title>{{ t.email.signup_milestone.text }}</mj-title>
    <mj-font name="Lexend Deca" href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@400;700&display=swap" />
    <mj-attributes>
      <mj-all font-family="'Lexend Deca', Arial, Helvetica, sans-serif" font-size="16px" align="center" font-weight="bold" line-height="1.3" />
      {% if darkmode %}
      <mj-text color="#e6e6e6" />
      {% else %}
      <mj-text color="#000000" />
      {% endif %}
    </mj-attributes>
    <!-- Include styles from separate file -->
    <mj-include path="./components/email-styles.mjml" />
  </mj-head>
  <mj-body css-class="{% if darkmode %}dark-mode{% else %}light-mode{% endif %}">
    <!-- Header -->
    <mj-include path="./components/header.mjml" />
    
    <!-- Main Content -->
    <mj-wrapper css-class="content-box" padding="20px" padding-bottom="0">
      <mj-section>
        <mj-column>
          <mj-image width="50px" height="50px" src="icons/users.png" align="center" />
          <mj-text font-size="30px">
            <mark>{{ t.email.signup_milestone.text }}</mark>
          </mj-text>
          <mj-text font-size="22px" padding-bottom="30px">
            {{ t.email.milestone_reached.text }}
          </mj-text>
          <mj-text font-size="18px" padding-bottom="20px">
            {{ t.email.milestone_count.text }}: <strong>{{ user_count }}</strong>
          </mj-text>
          <mj-text padding-bottom="30px">
            {{ t.email.milestone_message.text }}
          </mj-text>
          <mj-text font-size="16px" padding-bottom="20px">
            {{ t.email.milestone_date.text }}: {{ milestone_date }}
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>
    
    <!-- Footer -->
    <mj-include path="./components/footer.mjml" />
  </mj-body>
</mjml>